<% if @story.errors.any? %>

  <div class="panel panel-default">
    <div class="panel-body">

      <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@story.errors.count, "error") %>.
        </div>
        <ul>
        <% @story.errors.full_messages.each do |msg| %>
          <li>* <%= msg %></li>
        <% end %>
        </ul>
      </div>
      
    </div>
  </div>

<% end %>